  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.0",
    "bootstrap": "^4.6.2",
    "core-js": "^3.26.0",
    "jquery": "^3.6.1",
    "simplicite": "^2.2.29",
    "vue": "^3.2.41",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.6",
    "@vue/cli": "^5.0.8",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
